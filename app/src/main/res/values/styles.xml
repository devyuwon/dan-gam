<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashActivityTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:windowBackground">@drawable/img_splash</item>
    </style>
    <style name="PretendardTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard_variable</item>
    </style>
    <style name="PretendardButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard_variable</item>
    </style>
    <style name="PretendardEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard_variable</item>
    </style>
    <style name="PretendardRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/pretendard_variable</item>
    </style>
    <style name="PretendardCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/pretendard_variable</item>
    </style>

    <!-- 스타일추가 -->
    <style name="CustomRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/orange_secondary</item>
        <item name="colorControlNormal">@color/grey_500</item>
    </style>

</resources>
